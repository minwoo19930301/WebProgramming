<html>
    <head>
        <meta charset="utf-8">
        <title><%=title%></title>
    </head>
    <body>
        <form id="modifyForm" action="/modify/update" method="post">
            <input type="hidden" name="uid" value="<%=uid%>"/>
            <table align="center" width="700pt" border="1" cellspacing="0" cellpadding="0">
              <tr> 
                <td colspan="2" align="center" bgcolor="red" height="40" style="color:white"><b>정보 수정</b></td> 
              </tr> 
              <tr> 
                <td bgcolor="pink">아이디 :</td> 
                <td><input id="loginId" name="id" type="text" value="<%=login_id %>"></td> 
              </tr> 
              <tr> 
                <td bgcolor="pink" style="height: 24px;">새로운 비밀번호 :</td> 
                <td style="height: 24px;"><input id="loginPwd" name="password" type="password"></td> 
              </tr>
            </table> 
            <br/> 
            <!-- <center> <input type="submit" value="로그인"> </center>  -->
            <center> <input id='btnSubmit' type="button" value="수정">  <input id='btnCancel' type="button" value="취소"> </center>
            </form>
    </body>
    <script>
        document.getElementById('btnSubmit').onclick = function() {
          // alert('<%=title%>');
          var loginId = document.getElementById('loginId').value;
          var password = document.getElementById('loginPwd').value;
          if(loginId.length < 3) {
            alert('아이디 3자 이상');
            return;
          }
          if(password.length < 3) {
            alert('비밀번호 3자 이상');
            return;
          }
          document.getElementById('modifyForm').submit();
        };
        document.getElementById('btnCancel').onclick = function() {
            window.history.back();
        };
      </script>
</html>